{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ISlash",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#arrays"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.islash",
				"match": "\\b(declare|add|sub|mult|div|mod|increment|decrement|greaterthan|greaterthanequal|lessthan|lessthanequal|not|and|or|if|else|endif|equal|notequal|concat|length|getchar|say|input|while|endwhile|break|get|append|foreach|endforeach)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.islash",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.islash",
					"match": "\\\\."
				},
				{
					"name": "constant.character.escape.interpolation.islash",
					"match": "\\$\\([^\\)]*\\)"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.islash",
			"match": "(?x)\n(?<!\\$)\n(\n  \\b[0-9]([0-9_]*[0-9])?\\.\\B(?!\\.)\n  |\n  \\b[0-9]([0-9_]*[0-9])?\\.([Ee][+-]?[0-9]([0-9_]*[0-9])?)[FfDd]?\\b\n  |\n  \\b[0-9]([0-9_]*[0-9])?\\.([Ee][+-]?[0-9]([0-9_]*[0-9])?)?[FfDd]\\b\n  |\n  \\b[0-9]([0-9_]*[0-9])?\\.([0-9]([0-9_]*[0-9])?)([Ee][+-]?[0-9]([0-9_]*[0-9])?)?[FfDd]?\\b\n  |\n  (?<!\\.)\\B\\.[0-9]([0-9_]*[0-9])?([Ee][+-]?[0-9]([0-9_]*[0-9])?)?[FfDd]?\\b\n  |\n  \\b[0-9]([0-9_]*[0-9])?([Ee][+-]?[0-9]([0-9_]*[0-9])?)[FfDd]?\\b\n  |\n  \\b[0-9]([0-9_]*[0-9])?([Ee][+-]?[0-9]([0-9_]*[0-9])?)?[FfDd]\\b\n  |\n  \\b(0|[1-9]([0-9_]*[0-9])?)(?!\\.)[Ll]?\\b\n)\n(?!\\$)"
		},
		"arrays": {
			"begin": "\\[",
			"end": "\\]",
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#numbers"
				},
				{
					"match": ",",
					"name": "entity.name.type.comma.islash"
				}
			]
		},
		"comments": {
			"name": "comment.line.number-sign.islash",
			"begin": "#",
			"end": "\\n"
		}
	},
	"scopeName": "text.islash"
}